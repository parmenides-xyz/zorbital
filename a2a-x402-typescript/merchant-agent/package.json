{
  "name": "x402_merchant_agent",
  "version": "2.0.0",
  "description": "Production-ready x402 Payment-Enabled Merchant Agent",
  "main": "x402_merchant_agent.ts",
  "scripts": {
    "dev": "ts-node -r dotenv/config server.ts",
    "start": "ts-node -r dotenv/config server.ts",
    "start:prod": "node server.js",
    "cli": "adk run .",
    "web": "adk web . --port 10000",
    "dev:watch": "nodemon --watch src --watch server.ts --watch agent.ts --exec 'npm run dev'",
    "build": "tsc --project tsconfig.json",
    "test:payment": "ts-node -r dotenv/config src/test-payment-flow.ts",
    "test:payment:watch": "nodemon --watch src --exec 'npm run test:payment'",
    "clean": "rm -f *.js *.js.map src/**/*.js src/**/*.js.map",
    "prebuild": "npm run clean"
  },
  "dependencies": {
    "a2a-x402": "file:../x402_a2a",
    "adk-typescript": "1.0.3",
    "dotenv": "^17.2.3",
    "ethers": "^6.13.0"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
